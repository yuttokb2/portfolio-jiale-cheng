              <div class="relative bg-[#0a0a0a] ring-1 ring-slate-800/60 rounded-xl p-8 text-left shadow-2xl">
                  <p class="text-slate-300 text-lg md:text-xl leading-relaxed font-light" set:html={hero.bio_p1}></p>
                  <hr class="border-slate-800 my-6" />
                  <p class="text-slate-400 text-base leading-relaxed" set:html={hero.bio_p2}></p>
              </div>
          </div>

          <div class="flex flex-wrap gap-6 justify-center pt-8">
              <a href="https://www.linkedin.com/in/jiale-cheng-861375184" target="_blank" 
                class="relative px-8 py-4 rounded-full bg-white text-black font-bold hover:scale-105 transition-transform shadow-[0_0_20px_rgba(255,255,255,0.3)] hover:shadow-[0_0_30px_rgba(255,255,255,0.5)]">
                  {hero.btn_linkedin}
              </a>
              
              <a href="mailto:yuttokb2@gmail.com" 
                class="px-8 py-4 rounded-full border border-slate-700 text-slate-300 hover:text-cyan-400 hover:border-cyan-400 transition-colors bg-slate-900/50 hover:bg-cyan-950/30">
                  {hero.btn_email}
              </a>
          </div>
      </div>
  </main>
  
  <Skills title={skills.title} groups={skills.groups} />

  <Experience title={experience.title} jobs={experience.jobs} />
  
</Layout>