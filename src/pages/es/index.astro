---
import Layout from '../../layouts/Layout.astro';
import Experience from '../../components/Experience.astro';
import Skills from '../../components/Skills.astro';
import Projects from '../../components/Projects.astro';
import { es } from '../../i18n/es'; // <--- Importamos espaÃ±ol

const { hero, experience, skills, projects } = es;
---

<Layout title="Jiale Cheng | Senior Data Scientist">
  
  <a href="/en" class="fixed top-6 right-6 z-50 flex items-center gap-2 px-4 py-2 bg-slate-900/80 backdrop-blur border border-slate-700 rounded-full text-white font-bold hover:border-cyan-400 hover:text-cyan-400 transition-all shadow-lg group">
    <span>ðŸ‡ºðŸ‡¸</span>
    <span class="text-sm font-mono">EN</span>
  </a>
  <main class="fade-up relative w-full min-h-screen flex flex-col items-center justify-center pt-32 pb-20 px-4">

      <div class="mb-8 inline-flex items-center justify-center px-4 py-1.5 rounded-full border border-cyan-500/30 bg-cyan-500/10 backdrop-blur-sm animate-fade-in-up">
          <span class="flex h-2 w-2 rounded-full bg-cyan-400 mr-2 animate-pulse"></span>
          <span class="text-cyan-300 text-xs font-mono tracking-widest uppercase">Available for new projects</span>
      </div>

      <!-- Profile Image -->
      <div class="relative group mb-8">
          <div class="absolute -inset-1 bg-gradient-to-r from-cyan-500 via-blue-500 to-purple-600 rounded-full blur-md opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200 animate-pulse"></div>
          <div class="relative w-40 h-40 md:w-48 md:h-48 rounded-full overflow-hidden ring-4 ring-slate-900/50 shadow-2xl">
              <img
                  src="/images/profile.jpeg"
                  alt="Jiale Cheng"
                  class="w-full h-full object-cover object-[center_20%] grayscale hover:grayscale-0 transition-all duration-500"
              />
          </div>
      </div>

      <div class="z-10 text-center max-w-5xl mx-auto space-y-8">

          <h1 class="text-6xl md:text-8xl font-extrabold tracking-tighter mb-6">
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-cyan-200 to-blue-500 animate-gradient-x">
                  Jiale Cheng
              </span>
          </h1>

            <div class="h-10 mb-6 flex items-center justify-center">
                <h2 class="typewriter-text text-cyan-400 tracking-[0.2em] text-xs md:text-sm font-mono uppercase">
                    {hero.tagline}
                </h2>
            </div>

          <div class="relative group max-w-3xl mx-auto">
              <div class="absolute -inset-1 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
              
              <div class="relative bg-[#0a0a0a] ring-1 ring-slate-800/60 rounded-xl p-8 text-left shadow-2xl">
                  <p class="text-slate-300 text-lg md:text-xl leading-relaxed font-light" set:html={hero.bio_p1}></p>
                  <hr class="border-slate-800 my-6" />
                  <p class="text-slate-400 text-base leading-relaxed" set:html={hero.bio_p2}></p>
              </div>
          </div>

          <div class="flex flex-wrap gap-6 justify-center pt-8">
              <a href="https://www.linkedin.com/in/jiale-cheng-861375184" target="_blank" 
                class="relative px-8 py-4 rounded-full bg-white text-black font-bold hover:scale-105 transition-transform shadow-[0_0_20px_rgba(255,255,255,0.3)] hover:shadow-[0_0_30px_rgba(255,255,255,0.5)]">
                  {hero.btn_linkedin}
              </a>
              
              <a href="mailto:yuttokb2@gmail.com" 
                class="px-8 py-4 rounded-full border border-slate-700 text-slate-300 hover:text-cyan-400 hover:border-cyan-400 transition-colors bg-slate-900/50 hover:bg-cyan-950/30">
                  {hero.btn_email}
              </a>
          </div>
      </div>
  </main>
  
  <Skills title={skills.title} groups={skills.groups} />

  <Projects title={projects.title} projects={projects.list} />

  <Experience title={experience.title} jobs={experience.jobs} />

</Layout>