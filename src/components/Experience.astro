---
interface Props {
  title: string;
  jobs: {
    date: string;
    title: string;
    company: string;
    description: string;
    tags: string[];
    current?: boolean;
  }[];
}

const { title, jobs } = Astro.props;
---

<section class="relative py-20 px-4 max-w-4xl mx-auto" id="experiencia">
  <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">
    <span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-blue-600">
      {title}
    </span>
  </h2>

  <div class="relative container mx-auto flex flex-col space-y-8">
    <div class="absolute left-4 md:left-1/2 top-0 h-full w-0.5 bg-gradient-to-b from-cyan-500 via-blue-900 to-transparent -translate-x-1/2 z-0"></div>

    {jobs.map((exp, index) => (
      <div class={`relative z-10 flex flex-col md:flex-row ${index % 2 === 0 ? 'md:flex-row-reverse' : ''} items-center w-full`}>
        
        <div class="flex-1 hidden md:block"></div>

        <div class="absolute left-4 md:left-1/2 w-4 h-4 rounded-full border-2 border-cyan-400 bg-[#0a0a0a] -translate-x-1/2 shadow-[0_0_10px_rgba(34,211,238,0.5)] z-20">
          {exp.current && <div class="absolute inset-0 rounded-full bg-cyan-400 animate-ping opacity-75"></div>}
        </div>

        <div class="flex-1 w-full md:w-1/2 pl-12 md:pl-0 md:px-8">
          <article class={`
            fade-up group relative p-6 rounded-xl border border-slate-800 bg-slate-900/40 backdrop-blur-sm
            hover:border-cyan-500/30 hover:bg-slate-900/60 transition-all duration-300
            ${exp.current ? 'shadow-[0_0_20px_rgba(6,182,212,0.05)] border-cyan-500/20' : ''}
          `}>
            
            <header class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold text-slate-100 group-hover:text-cyan-400 transition-colors">
                  {exp.title}
                </h3>
                <p class="text-cyan-500 font-mono text-sm mt-1">{exp.company}</p>
              </div>
              <span class="text-xs font-mono text-slate-400 border border-slate-700 px-2 py-1 rounded bg-slate-950">
                {exp.date}
              </span>
            </header>

            <p class="text-slate-400 text-sm leading-relaxed mb-4">
              {exp.description}
            </p>

            <div class="flex flex-wrap gap-2">
              {exp.tags.map((tag) => (
                <span class="px-2 py-1 text-xs rounded bg-cyan-950/30 text-cyan-300 border border-cyan-900/50">
                  {tag}
                </span>
              ))}
            </div>

          </article>
        </div>

      </div>
    ))}
  </div>
</section>