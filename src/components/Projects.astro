---
interface Project {
  title: string;
  company: string;
  period: string;
  description: string;
  impact: string[];
  technologies: string[];
  category: string;
  icon: string;
}

interface Props {
  title: string;
  projects: Project[];
}

const { title, projects } = Astro.props;
---

<section class="relative py-20 px-4 max-w-7xl mx-auto" id="projects">
  <h2 class="text-3xl md:text-4xl font-bold mb-4 text-center">
    <span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-blue-600">
      {title}
    </span>
  </h2>

  <p class="text-slate-400 text-center max-w-2xl mx-auto mb-16">
    Key projects that showcase expertise in ML, data engineering, and strategic implementation
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map((project, index) => (
      <article
        class="fade-up group relative bg-slate-900/40 backdrop-blur-sm rounded-2xl border border-slate-800 overflow-hidden hover:border-cyan-500/50 transition-all duration-500 hover:shadow-[0_0_30px_rgba(6,182,212,0.15)]"
        style={`transition-delay: ${index * 100}ms`}
      >
        <!-- Gradient background effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 via-transparent to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

        <!-- Icon badge -->
        <div class="absolute top-4 right-4 w-12 h-12 rounded-xl bg-gradient-to-br from-cyan-500 to-blue-600 flex items-center justify-center text-2xl shadow-lg shadow-cyan-500/20">
          {project.icon}
        </div>

        <div class="relative p-6">
          <!-- Category badge -->
          <span class="inline-block px-3 py-1 text-xs font-mono rounded-full bg-cyan-950/50 text-cyan-300 border border-cyan-900/50 mb-4">
            {project.category}
          </span>

          <!-- Title and company -->
          <h3 class="text-xl font-bold text-slate-100 mb-2 group-hover:text-cyan-400 transition-colors">
            {project.title}
          </h3>

          <div class="flex items-center gap-2 mb-3">
            <span class="text-cyan-500 font-semibold text-sm">{project.company}</span>
            <span class="text-slate-600">•</span>
            <span class="text-slate-500 text-sm font-mono">{project.period}</span>
          </div>

          <!-- Description -->
          <p class="text-slate-400 text-sm leading-relaxed mb-4">
            {project.description}
          </p>

          <!-- Impact metrics -->
          {project.impact.length > 0 && (
            <div class="mb-4 space-y-2">
              <h4 class="text-xs font-semibold text-slate-300 uppercase tracking-wider mb-2 flex items-center gap-2">
                <span class="w-1 h-1 rounded-full bg-cyan-400"></span>
                Impact
              </h4>
              <ul class="space-y-1.5">
                {project.impact.map((item) => (
                  <li class="text-xs text-slate-400 flex items-start gap-2">
                    <span class="text-cyan-400 mt-0.5">▸</span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Technologies -->
          <div class="pt-4 border-t border-slate-800/50">
            <div class="flex flex-wrap gap-1.5">
              {project.technologies.map((tech) => (
                <span class="px-2 py-0.5 text-xs rounded bg-slate-950/50 text-slate-400 border border-slate-800/50 hover:border-cyan-900/50 hover:text-cyan-400 transition-colors">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Bottom gradient line -->
        <div class="h-1 bg-gradient-to-r from-cyan-500 via-blue-500 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      </article>
    ))}
  </div>
</section>